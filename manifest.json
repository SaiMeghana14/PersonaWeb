{
  "manifest_version": 3,
  "name": "PersonaWeb",
  "version": "1.0.0",
  "description": "Browse Better. Learn Faster. Work Smarter. Private, local AI-powered web personalization.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_popup": "src/popup.html",
    "default_title": "PersonaWeb"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "clipboardWrite",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/sidebar.html", "src/sidebar.css", "src/sidebar.js", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
